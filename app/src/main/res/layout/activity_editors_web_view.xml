<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.samsung.microbit.ui.activity.EditorWebView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_color"
        android:importantForAccessibility="yes"
        />

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="@string/desc_back_to_home_from_editor_btn"
            android:nextFocusDown="@id/img_toolbar_logo"
            android:onClick="onClick"
            android:padding="@dimen/app_bar_back_btn_padding"
            android:src="@drawable/ic_back_arrow" />

    <ImageView
        android:id="@+id/img_toolbar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/content_description_toolbar_logo"
        android:src="@drawable/microbit_app_bar_logo"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/makecodeCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white_color"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/makecodeImageButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/makecode"
                    android:visibility="visible"
                    tools:ignore="NestedWeights" />


                <Button
                    android:id="@+id/makecodeButton"
                    style="@style/main_activity_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="10dp"
                    android:text="@string/editor_btn_makecode" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/pythonCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white_color"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/pythonImageButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/python"
                    android:visibility="visible"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    tools:ignore="NestedWeights" />

                <Button
                    android:id="@+id/pythonButton"
                    style="@style/main_activity_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="10dp"
                    android:text="@string/editor_btn_python" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <WebView
            android:id="@+id/generalView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:hardwareAccelerated="true"
            android:visibility="gone"
            android:windowSoftInputMode="adjustResize" />

    </LinearLayout>
</LinearLayout>